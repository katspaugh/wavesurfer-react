{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "nodenext",
    "allowUmdGlobalAccess": false,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "cypress",
    "dist"
  ]
}
